{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "includes": ["**/*.{ts,tsx,js,jsx}"],
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNamespace": "error",
        "useBlockStatements": "warn",
        "useImportType": "error",
        "noNonNullAssertion": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noConsole": "warn",
        "noDebugger": "error"
      },
      "complexity": {
        "noUselessFragments": "error",
        "useOptionalChain": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noImgElement": "warn"
      },
      "a11y": {
        "useButtonType": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": [
        "apps/client/components/ui/**",
        "**/ui-shadcn/**",
        "**/shared/ui-shadcn/**",
        "**/apps/client/shared/ui-shadcn/**"
      ],
      "linter": { "enabled": false },
      "formatter": { "enabled": false },
      "assist": { "enabled": false }
    },
    {
      "includes": [
        "apps/client/app/globals.css",
        "packages/tailwind-config/shared-styles.css",
        "packages/ui/src/styles.css"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/loading.tsx",
        "**/*loading.tsx",
        "**/*skeleton*.tsx",
        "**/*-skeleton.tsx",
        "**/skeleton/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/scripts/**/*",
        "**/*.config.*",
        "**/*.test.*",
        "**/__tests__/**",
        "**/test-setup.ts",
        "**/test-*.ts",
        "**/debug-*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "performance": {
            "noImgElement": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/infrastructure/**/*",
        "**/integrations/**/*",
        "apps/**/src/index.ts",
        "packages/server-kit/src/json-logger.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/client/features/**/queries/**/*",
        "apps/client/features/**/actions/**/*",
        "apps/client/features/**/ui/**/*"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
