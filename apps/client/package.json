{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "typecheck": "tsc --noEmit",
    "dep:cycles": "madge app --ts-config tsconfig.json --extensions ts,tsx --circular --exclude 'node_modules|.next|dist'",
    "dep:orphans": "madge app/layout.tsx app/page.tsx --ts-config tsconfig.json --extensions ts,tsx --orphans --exclude 'node_modules|.next|dist'",
    "dep:graph": "madge app --ts-config tsconfig.json --extensions ts,tsx --image ../../docs/client-deps.svg --exclude 'node_modules|.next|dist'"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "16.0.1",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.0",
    "@types/react": "^19",
    "@types/react-dom": "^19.2.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
