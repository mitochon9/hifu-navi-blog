{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./dist-types",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
